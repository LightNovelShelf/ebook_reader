{
  "name": "ebook_reader",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview"
  },
  "dependencies": {
    "@microsoft/signalr": "^5.0.9",
    "core-js": "^3.17.3",
    "epubjs": "git+https://github.com/LightNovelShelf/epub.js.git",
    "epubjs85": "git+https://github.com/LightNovelShelf/epub.js.git#85",
    "localforage": "^1.10.0",
    "lodash-es": "^4.17.21",
    "naive-ui": "^2.18.2",
    "pinia": "^2.0.0-rc.8",
    "v-hotkey": "^0.9.0",
    "vfonts": "^0.1.0",
    "vue": "^3.2.10",
    "vue-router": "^4.0.0-0",
    "vuetify": "^3.0.0-alpha.11"
  },
  "devDependencies": {
    "@mdi/js": "^6.1.95",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vitejs/plugin-vue": "^1.6.2",
    "@vue/compiler-sfc": "^3.2.11",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "babel-plugin-component": "^1.1.1",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.17.0",
    "prettier": "^2.4.0",
    "sass": "^1.40.0",
    "typescript": "~4.4.3",
    "vite": "^2.5.7",
    "vue-tsc": "^0.3.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "no-unused-vars": 0,
      "no-unused-labels": 0,
      "no-debugger": 0,
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/ban-ts-comment": 0,
      "@typescript-eslint/no-non-null-assertion": 0,
      "quotes": [
        1,
        "single"
      ],
      "semi": [
        1,
        "never"
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
